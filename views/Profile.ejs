
<div class="my-3">
<div class="card p-3 m-3 d-flex ">
  <h3 class="text-center text-primary mb-3">Profile</h3>
  <div class="center-div">
    <% if (user.profilePic) { %>
    <img
      src="<%= user.profilePic %>"
      alt="img"
      class="rounded-circle"
      width=250
      height=250
    />
    <% } %>
  </div>
  <div class="mt-3">
    <% if (!user.profilePic) { %>
    <a class="btn btn-primary" href="/uploadProfilePic"
      >upload Profile Picture</a
    >
    <% } %>

    <div class="center-div">
      <p><strong>First Name</strong></p>
      <p><%= user.firstName %></p>
    </div>
    <div>
      <p><strong>Last Name</strong></p>
      <p><%= user.lastName %></p>
    </div>
    <div>
      <p><strong>Email</strong></p>
      <p><%= user.email %></p>
    </div>
    <div>
      <p><strong>Country</strong></p>
      <p><%= user.country %></p>
    </div>
    <div>
      <p><strong>State</strong></p>
      <p><%= user.state %></p>
    </div>
    <div>
      <p><strong>City</strong></p>
      <p><%= user.city %></p>
    </div>
    <div>
      <p><strong>Age</strong></p>
      <p><%= user.age %></p>
    </div>
    <div>
      <p><strong>Gender</strong></p>
      <p><%= user.gender %></p>
    </div>
  </div>
  </div>
  <div class="row">
    <form novalidate id="commentForm" class="form-container" method="POST">
      <div class="form-group my-3">
        <textarea class="form-control" id="comment" name="comment" placeholder="comment here" required data-pristine-required-message="Comment Required"></textarea>
      </div>
      <button type="submit" class="btn btn-primary" id="postBtn">Post Comment</button>
    </form>
    <div id="commentsDiv">

    </div>
  </div>
  </div>
  <script src="/public/js/getProfileData.js"></script>
  <script src="/public/js/pristine.js"></script>
  <script id="commentScript"src="/public/js/commentAndReplyScript.js" data-user="<%= user.uuid %>"></script>
