
<div class="d-flex align-items-center justify-content-center">
  <div class="card p-5" style="width: 30rem">
    <h2 class="text-center text-primary font-weight-bold">Get Started</h2>
    <% if (expressFlash.length > 0) { %>
    <div class="alert alert-danger"><%= expressFlash %></div>
    <%}%>

    <form id="signUpForm" novalidate method="POST" class="form-container">
      <div class="spinner-border text-primary centered centered" id="signup-spinner" role="status">
      </div>
      <div class="form-group mb-3 mt-3">
        <label for="exampleInputEmail1" class="form-label">First Name</label>
        <input
          type="text"
          class="form-control"
          id="firstName"
          name="firstName"
          aria-describedby="emailHelp"
          required
          data-pristine-required-message="Please Fill First Name"
          class="form-control"
          data-pristine-minlength="3"
          required
        />
      </div>
      <div class="form-group mb-3 mt-3">
        <label for="exampleInputEmail1" class="form-label">Last Name</label>
        <input
          type="text"
          class="form-control"
          id="lastName"
          name="lastName"
          aria-describedby="emailHelp"
          data-pristine-required-message="Please Fill Last Name"
          required
          data-pristine-minlength="3"
          required
        />
      </div>
      <div class="form-group mb-3 mt-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          aria-describedby="emailHelp"
          required
          data-pristine-required-message="Please Fill Email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
          class="form-control"
          data-pristine-required-message="Please Fill Password"
          data-pristine-minlength="8"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          required
          class="form-control"
          data-pristine-required-message="Please Confirm Password"
        />
      </div>

    <div class="form-group mb-3 mt-3">
    <label for="Country" class="form-label">Country</label>
    <select name="country" class="countries form-control" id="countryId"  required data-pristine-required-message="Country Required">        
     <option value="">Select Country</option> 
    </select>
    </div>

    <div class="form-group mb-3 mt-3">
    <label for="State" class="form-label">State</label>
        <select name="state" class="states form-control" id="stateId"  required data-pristine-required-message="State Required">
         <option value="">Select State</option> 
        </select>
    </div>

    <div class="form-group mb-3 mt-3">
    <label for="City" class="form-label">City</label>
        <select name="city" class="cities form-control" id="cityId"  required data-pristine-required-message="City Required">
           <option value="">Select City</option> 
        </select>
    </div>







      <!-- <div class="form-group mb-3 mt-3">
        <label for="city" class="form-label">City</label>
        <input
          type="text"
          class="form-control"
          id="city"
          name="city"
          aria-describedby="emailHelp"
          required
          class="form-control"
          data-pristine-required-message="Please Fill City"
        />
      </div> -->
      <div class="form-group mb-3 mt-3">
        <label for="age" class="form-label">Age</label>
        <input
          type="text"
          class="form-control"
          id="age"
          name="age"
          aria-describedby="emailHelp"
          required
          class="form-control"
          data-pristine-required-message="Please Fill Age"
          data-pristine-type="integer"
        />
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="gender"
          id="flexRadioDefault2"
          value="male"
          checked
        />
        <label class="form-check-label" for="flexRadioDefault2"> Male </label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="gender"
          value="female"
          id="flexRadioDefault1"
        />
        <label class="form-check-label" for="flexRadioDefault1"> Female </label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="gender"
          id="exampleRadios3"
          value="other"
        />
        <label class="form-check-label" for="exampleRadios3"> Other </label>
      </div>
      <div class="mt-3">
        <button type="submit" class="btn btn-primary" id="signup-btn">Sign Up</button>
      </div>
      <div class="mt-3">
        <a href="login" class="text text-primary hovertext-success">
          Already have a account</a
        >
      </div>
    </form>
  </div>
</div>
<script src="/public/js/pristine.js"></script>
<script src="/public/js/signUpScript.js"></script>
