<div
  class="d-flex justify-content-center align-items-center"
  style="height: 100vh"
>
  <div class="card p-5">
    <h2 class="text-center text-primary font-weight-bold">Login</h2>
    <form id="loginForm" novalidate method="POST" class="form-container">
      <div class="spinner-border text-primary centered" id="login-spinner" role="status">
      </div>
      <div class="form-group mb-3 mt-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          name="email"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          data-pristine-required-message="Email Required"
          required
        />
        <div id="emailHelp" class="form-text">
          We'll never share your email with anyone else.
        </div>
      </div>
      <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="login-password"
          data-pristine-required-message="Password Required"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary" id="login-Btn">Login</button>
      <div class="mt-3">
        <a
          href="#"
          id="forgotPasswordBtn"
          class="text text-primary font-weight-bold"
          >Forgot Password</a
        >
      </div>
      <div class="mt-2">
        <a href="SignUp" class="text text-primary">Don't have account</a>
      </div>
    </form>
  </div>
</div>
<script src="js/pristine.js"></script>
<script src="js/loginScript.js"></script>
